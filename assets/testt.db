BEGIN TRANSACTION;
CREATE TABLE IF NOT EXISTS "questions" (
	"id"	INTEGER,
	"question"	TEXT,
	"options"	TEXT,
	"correctIndex"	INTEGER,
	"category"	TEXT,
	PRIMARY KEY("id")
);
CREATE TABLE IF NOT EXISTS "stats" (
	"id"	INTEGER,
	"user_id"	INTEGER,
	"test_id"	INTEGER,
	"correct_answers"	INTEGER,
	"total_questions"	INTEGER,
	"completion_time"	INTEGER,
	"date_taken"	TEXT,
	PRIMARY KEY("id")
);
CREATE TABLE IF NOT EXISTS "tests" (
	"id"	INTEGER,
	"title"	TEXT,
	"route"	TEXT,
	PRIMARY KEY("id")
);
